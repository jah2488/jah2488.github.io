---
title: Games
---
<ul class='posts-list games-list'>
  <% blog('games').articles[0...50].each do |article| %>
    <li>
      <h4><a href="<%= article.url %>"><%= article.title %></a> <time mobile='<%= article.date.strftime("%m/%d/%y") %>' time='<%= article.date.strftime('%b %e %Y') %>'></time> </h4>
    </li>
    <li>
      <%= image_tag 'photo.png' %>
    </li>
  <% end %>
</ul>

<% blog('games').articles[0...50].each do |article| %>
  <div class='three columns'>
        <h4><a href="<%= article.url %>"><%= article.title %></a> <time mobile='<%= article.date.strftime("%m/%d/%y") %>' time='<%= article.date.strftime('%b %e %Y') %>'></time> </h4>
  </div>
<% end %>
