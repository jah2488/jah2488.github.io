<% wrap_layout :layout do %>
  <article>
    <header>
      <h1><%= current_article.title.titleize %></h1>
      <date><%= current_article.date.strftime("%b %e, %Y") %></date>
      <hr>
    </header>
    <div id='game-content'>
      <%= partial "game/#{current_article.metadata[:page]['plugin']}", locals: { title: current_article.metadata[:page]['name'] || current_article.title, width: current_article.metadata[:page]['width'], height: current_article.metadata[:page]['height'] } %>
    </div>
    <%= yield %>
    <p>
      <a href="https://dl.dropboxusercontent.com/u/3496603/<%= current_article.title %>/<%= current_article.title %>.swf" target="_blank" >SWF Download</a> |
      <a href="https://dl.dropboxusercontent.com/u/3496603/<%= current_article.title %>/<%= current_article.title %>.zip" target="_blank" >OS X Download</a>
    </p>
    <footer>
      <hr>
      <a href="https://twitter.com/share" class="twitter-share-button" data-count='none' data-via="jah2488" data-lang="en">Tweet</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      <script type="text/javascript">positionPlay();</script>
    </footer>
  </article>
<% end %>
